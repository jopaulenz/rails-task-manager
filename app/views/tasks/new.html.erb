<h2>Add a new task</h2>

<div class = "d-flex justify-content-center">
<%= form_with model: @task do |f| %>
  <%= f.label :title, class: "me-2" %>
  <%= f.text_field :title, class: "me-2"  %>
  <%= f.label :details,  class: "me-2" %>
  <%= f.text_field :details, class: "me-2"  %>
  <%= f.submit %>
<% end %>
</div>
